@model Cloudmarket.Domain.Entities.Produto

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.Nome)</h2>
<hr />
<div class="container">
    <div class="container">
        <div class="col-md-6" id="img-container">
            <div>
                <img src="@Html.DisplayFor(model => model.ImagemPath)" width="300" height="200" />
            </div>
        </div>

        <div class="row col-md-6" id="info-container">
            <div class="nome">
                @Html.DisplayFor(model => model.Nome)
            </div>

            <div class="codigo">
                <label class="codigo-label">Codigo:</label> <label class="codigo-produto">@Html.DisplayFor(model => model.Codigo)</label>
            </div>

            <div class="estoque">
                <label class="estoque-label">Quantidade em Estoque:</label> <label class="estoque-qtd">@Html.DisplayFor(model => model.QtdEstoque)</label> 
            </div>

            <div class="preco mt-20">
                @Html.DisplayFor(model => model.Preco)
            </div>

            <div class="quantidade mt-20">
                <span> Quantidade: </span>
                <button class="btn-quantidade-subtr"> - </button>
                <a class="quantidade-view"> 1 </a>
                <button class="btn-quantidade-add"> + </button>
            </div>

            <div class="btn-comprar mt-25">
                <button class="btn btn-default" id="adicionar-carrinho">Adicionar ao Carrinho</button>
            </div>
        </div>
    </div>

    <div class="container" id="desc-container" style="margin-top: 2em">
        <div>
            @Html.DisplayFor(model => model.Descricao)
        </div>
    </div>
</div>

@section Scripts {
    @Styles.Render("~/Content/css/produtos-cliente-details.css")
    @Scripts.Render("~/Scripts/tools/ajax/getProdutoByCodigo.js")
    @Scripts.Render("~/Scripts/produto-cliente/details.js")
}
